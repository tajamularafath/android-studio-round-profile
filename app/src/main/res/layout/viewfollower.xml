<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_postscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/postscount"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/posttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/posts"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_postscount"
        app:layout_constraintStart_toStartOf="@id/tv_postscount"
        app:layout_constraintEnd_toEndOf="@id/tv_postscount"
        />
</androidx.constraintlayout.widget.ConstraintLayout>